<div class="posts-box">
  <div class="user-box-posts">
    <div class="user-box-post">
      <h4><%= @post.title %></h4>
      <span class="user-post-content-comments">Comments: <%= @post.comments_counter || 0%>, Likes: <%= @post.likes_counter || 0%></span>
      <span class="user-post-content"><%= @post.text %></span>
    </div>
    <%= render partial: 'comments', locals: { post: @post, comments: @post.comments }%>
  </div>
  <%= button_to "Add new Comment", new_user_post_comment_path(@post.author, @post), method: :get, class: "pagination clickable" %>
  <%= button_to "Add a Like", user_post_likes_path(@post.author, @post), class: "pagination clickable" %>
</div>