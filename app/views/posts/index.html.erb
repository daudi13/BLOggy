<div class="posts-box">
  <div class="user-box">
    <div class="user-image">
      <img src="<%= @user.photo %>" alt="avatar">
    </div>
    <div class="user-data">
      <h2><%= @user.name%></h2>
      <span class="user-posts">Number of posts: <%= @user.posts_counter%></span>
    </div>
  </div>

  <% @posts.posts.each do |post| %>
    <%= render partial: "post", locals: { post: post, user: @user } %>
  <% end %>

  <button class="pagination clickable">Pagination</button>
  <%= button_to 'Add Post', new_user_post_path(@user), method: :get, class: "clickable pagination"%>
</div>