<div class="user-box">
  <div class="user-image">
    <img src="<%= user.photo %>" alt="avatar">
  </div>
  <div class="user-data">
    <h4 class="title"><%= link_to user.name, user_path(user) %></h4>
    <span class="user-posts">Number of posts: <%= user.posts_counter || 0 %></span>
  </div>
</div>